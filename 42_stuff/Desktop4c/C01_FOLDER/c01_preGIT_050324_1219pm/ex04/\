#include	<stdio.h>

void	ft_ultimate_div_mod(int *a, int *b)
{
	*a = a / b;
	*b = a % b;
}

int	main(void)
{
	int	a;
	int	b;
	int	div;
	int	mod;

	a = 13;
	b = 3;
	ft_ultimate_div_mod(a, b, &div, &mod);
	printf ("division: %d/n", div);
	printf ("remainder: %d/n", mod);
	return (0);
}
